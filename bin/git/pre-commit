. ./bin/functions.sh

start_step 1 1 "Linting"

composer lint &> /dev/null

if [ $? -ne 0 ]; then
  print_error_message "Linting failed. Run 'composer lint' for more information."
  printf "Run 'composer fix' to solve the problem.\n"
  print_abort_message
  exit 1
fi

print_success message "Commit successful"

exit $?
